<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="APV.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:APV"
    xmlns:views="clr-namespace:APV.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="APV">

    <TabBar>
        <Tab Title="Home">
            <ShellContent
                ContentTemplate="{DataTemplate views:HomePage}"/>
        </Tab>
        <Tab Title="Store">
            <ShellContent
                ContentTemplate="{DataTemplate views:StorePage}"/>
        </Tab>
        <Tab Title="Downloads">
            <ShellContent
                ContentTemplate="{DataTemplate views:DownloadsPage}"/>
        </Tab>
        <Tab Title="Search">
            <ShellContent
                ContentTemplate="{DataTemplate views:SearchPage}"/>
        </Tab>
        
    </TabBar>
</Shell>
