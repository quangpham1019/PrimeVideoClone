<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:APV.ViewModels"
             xmlns:models="clr-namespace:APV.CoreBusiness"
             xmlns:controls="clr-namespace:APV.Views.Controls"
             x:DataType="viewmodels:HomePageViewModel"
             x:Class="APV.Views.HomePage"
             Title="HomePage">
    <VerticalStackLayout>
        
        <CollectionView ItemsSource="{Binding MovieRowList}"
                        Margin="10">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical"
                                   ItemSpacing="5"/>
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="viewmodels:MovieRowViewModel">
                    <Border>
                        <controls:MovieRow MovieRowHeading="{Binding MovieRowHeading}"
                                           MovieList="{Binding MovieList}" />
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>