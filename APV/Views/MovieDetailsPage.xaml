<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:APV.ViewModels"
             xmlns:models="clr-namespace:APV.CoreBusiness"
             x:Class="APV.Views.MovieDetailsPage"
             x:DataType="viewModels:MovieDetailsViewModel"
             Title="MovieDetailsPage">
    <VerticalStackLayout>
        <Image >
            <Image.Source>
                <UriImageSource Uri="{Binding MovieDetails.Backdrop_path}" />
            </Image.Source>
        </Image>
        <Label 
            Text="{Binding MovieDetails.Original_title}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>